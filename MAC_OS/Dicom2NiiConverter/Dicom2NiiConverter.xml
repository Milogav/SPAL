<?xml version="1.0" encoding="utf-8"?>
<executable>

  <category>SPAL.Utils</category>
  <title>Dicom2nii conversion</title>
  <description>This module converts the dicom images inside a dicom series folder to a single nii.gz file with the filename specified.</description>
  <version>1.0</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Miguel Lopez Gavilan</contributor>

<parameters>
    <label>IO</label>
    <description>Input/output parameters</description>

    <directory> 
	<name>dicomDirselector</name>
        <label>Input dicom serie directory: </label>
        <channel>input</channel>
        <index>1</index>
    </directory>

    <directory> 
	<name>outputSelector</name>
        <label>Output folder: </label>
        <channel>input</channel>
        <index>2</index>
    </directory>

    <string>
    	<name>filename</name>
    	<label>Name output file as:</label>
    	<channel>input</channel>
	<index>3</index>
    </string>

</parameters>

</executable>
